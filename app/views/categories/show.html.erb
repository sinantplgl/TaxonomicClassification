<div class="row">
    <% if @sub_categories.count != 0%>
        <div class="col-sm-6 col-lg-3">
            <div class="card">
                <div class="card-body border-0 p-0">
                <ul class="nav nav-sidebar mb-2">
                    <% @sub_categories.each do |category| %>
                        <li class="nav-item">
                            <a href="<%=category_detail_path(category.slug)%>" class="nav-link legitRipple"><%=category.name%></a>
                        </li>
                    <% end %>
                </ul>
                </div>
            </div>
        </div>
    <% end %>
	<div class="col-sm-6 col-lg-9">
		<div class="row justify-content-around">
			<% @insects.each do |item| %>
                <div class="col-sm-12 col-md-6 col-xl-4">
                    <div class="card">
                        <div class="card-img-actions mx-1 mt-1">
                            <img class="card-img img-fluid" src="https://res.cloudinary.com/dxql9aygi/image/upload/v1574527162/<%= item.image %>.jpg" alt="">
                            <div class="card-img-actions-overlay card-img">
                                <a href="https://res.cloudinary.com/dxql9aygi/image/upload/v1574527162/<%= item.image %>.jpg" class="btn btn-outline bg-white text-white border-white border-2 btn-icon rounded-round" data-popup="lightbox" rel="group">
                                    <i class="icon-plus3"></i>
                                </a>

                                <a href="#" class="btn btn-outline bg-white text-white border-white border-2 btn-icon rounded-round ml-2">
                                    <i class="icon-eye"></i>
                                </a>
                            </div>
                        </div>

                        <div class="card-body">
                            <div class="d-flex align-items-start flex-nowrap">
                                <div>
                                    <div class="font-weight-semibold mr-2"><%= item.name %></div>
                                </div>

                                <% if current_user and current_user.role == "admin" %>
                                    <div class="list-icons list-icons-extended ml-auto">
                                        <a href="#" class="list-icons-item"><i class="icon-pencil3 top-0"></i></a>
                                        <a href="#" class="list-icons-item"><i class="icon-bin top-0"></i></a>
                                    </div>
                                <% end %>
                            </div>
                        </div>
                    </div>
                </div>
            <% end %>
		</div>
	</div>
</div>